<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if(user && user.isAdmin){
        <h1>Podcast List</h1>
        <div>
           <a href="/podcast">View podcasts</a> 
        </div>
   <% } %>

   <% if (categories && user) { %>
    <% categories.forEach(element => { %>
      
      <div>
          <a href="/podcast/<%= element%>/single"> <%= element%> </a>
        </div>
      </div>
      <% })%> <% } else {%>
      <div></div>
  <% } %>


  <%if(podcasts.length) { %> <% podcasts.forEach((item)=>{ %>
    <li>
      <h3><%= item.title%></h3>
      <div>
        <img src="/uploads/<%= item.filesUrl%>" controls></img>
      </div>
      <p><%= item.description%></p>
      <p><%= item.types%></p>
      <h5>likes: <span><%= item.likes%></span></h5>
      <a href="/podcast/<%=item.id%>">
        <button class="btn">See more</button>
      </a>
    </li>
    <% }) %> <% } else {%>
    <h2>No podcasts available</h2>
    <% }%>

</body>
</html>