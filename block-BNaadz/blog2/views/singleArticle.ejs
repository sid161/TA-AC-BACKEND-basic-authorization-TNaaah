<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <a href="/">Home</a>
        <nav>
          <ul>
            <li>
              <a href="/article">articles</a>
            </li>
            <%if(user){%>
              <li>
                <a href="/article/new">add article</a>
              </li>
              <li>
                <a href="/users/logout">logout</a>
              </li>
            <%}else{ %>
            <a href="/users/signup">signup</a>
            <a href="/users/login">login</a>
            <%}%>
          </ul>
        </nav>
      </header>
      <div class="article">
        <h1><%= article.title %></h1>
        <p>Description:- <%= article.description %></p>
        
  
        <div>
          <h4>
            <a href="/articles/<%= article.id %>/edit">Edit Article</a>
          </h4>
        </div>
        <div>
          <h4><a href="/articles/<%= article.id %>/delete">Delete Article</a></h4>
        </div>
        <div>
          <h4><a href="/articles">Back</a></h4>
        </div>
      </div>
      <div class="comment">
        <form action="/articles/<%= article.id %>/comment" method="POST">
          <textarea
            name="comment"
            cols="30"
            rows="10"
            placeholder="Comment"
          ></textarea>
          <input type="submit" value="Add comment" />
        </form>
  
        <% article.comments.forEach((comment,index)=>{ %>
        <div>
          <p>
            <%= index+1 %>. <%= comment.comment %>
            <div>
              <button><a href="/comments/<%= comment.id %>">Edit </a></button>
              <button><a href="/comments/<%= comment.id %>/delete">Delete </a></button>
            </div>
          </p>
        </div>
        <% }) %>
      </div>
</body>
</html>